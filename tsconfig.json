{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts"]
}
